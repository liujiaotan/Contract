@model Contract.Models.Room

@{
    ViewBag.Title = Resources.Resource.Room;
    Layout = "~/Views/Shared/_LayoutDelete.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("服务中心")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceCenter.Name)
        </dd>

        <dt>
            @Html.DisplayName("类型")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomCategory.Name)
        </dd>

        <dt>
            @Html.DisplayName("状态")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomType.Name)
        </dd>

        <dt>
            @Html.DisplayName("房间号")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>

        <dt>
            @Html.DisplayName("面积")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Space)
        </dd>

        <dt>
            @Html.DisplayName("备注")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayName("创建日期")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resources.Resource.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Resources.Resource.Back, "Index")
        </div>
    }
</div>
