@model IEnumerable<Contract.Models.Tenancy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h3>租赁合同 <small>租赁合同数据维护与查询</small></h3>
</div>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">操作 <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">新建</a></li>
                    </ul>
                </li>
            </ul>
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input name="Number" type="text" class="form-control" placeholder="合同号">
                </div>
                <button type="submit" class="btn btn-default">查询</button>
            </form>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="panel panel-default">
    <table class="table table-striped table-hover table-bordered ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Process.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCenter.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeatingFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElectricityRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaseTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Process.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceCenter.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeatingFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ElectricityRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaseTerm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EffectDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>