@model IEnumerable<Contract.Models.Tenancy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h3>租赁合同 <small>租赁合同数据维护与查询</small></h3>
</div>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">操作 <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="@(Url.Action("Create"))"><i class="icon-file"></i> 新建</a></li>
                    </ul>
                </li>
            </ul>
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input name="Number" type="text" class="form-control" placeholder="合同号">
                </div>
                <button type="submit" class="btn btn-default">查询</button>
            </form>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="panel panel-default">
    <table class="table table-striped table-hover table-bordered ">
        <tr>
            <th>
                @Html.DisplayName("合同编号")
            </th>
            <th>
                @Html.DisplayName("客户")
            </th>
            <th>
                @Html.DisplayName("房间")
            </th>
            <th>
                @Html.DisplayName("单价")
            </th>
            <th>
                @Html.DisplayName("服务费")
            </th>
            <th>
                @Html.DisplayName("取暖费")
            </th>
            <th>
                @Html.DisplayName("电费")
            </th>
            <th>
                @Html.DisplayName("租赁期限")
            </th>
            <th>
                @Html.DisplayName("生效日期")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>

                <td>
                    @foreach (var room in item.Rooms)
                    {
                        @(room.Number + " ");
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeatingFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ElectricityRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaseTerm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EffectDate)
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("详细", "Details", new { id = item.ID }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>